            Try
                For i = 0 To arrayCombos.Length - 1
                    Select Case arrayCombos(i).GetType.ToString
                        Case "C1.Win.C1List.C1Combo"
                            AutosizeColumnasCombo(DirectCast(arrayCombos(i), C1.Win.C1List.C1Combo))
                        Case "System.Windows.Forms.ComboBox"
                            'DirectCast(arrayCombos(i), System.Windows.Forms.ComboBox).MaxDropDownItems = 10
                    End Select
                Next

            Catch ex As Exception
                LOG(ex.ToString)
            End Try
        End Sub
        Private Function noEsID(ByVal campo As String) As Boolean
            Try
                Select Case campo
                    Case "FRA" : Return False
                    Case "CLIENT" : Return False
                    Case "ORDRE" : Return False
                    Case "PROVE" : Return False
                    Case "TALLER" : Return False
                    Case "TRANS" : Return False
                    Case "ACABADOR", "TEIXIDOR", "ESTAMPADOR" : Return False
                End Select
                Return True

            Catch ex As Exception
                LOG(ex.ToString)
            End Try
        End Function
        Friend Sub HacerBindingsTodos(ByVal dvform As DataView)
            Dim i As Integer
            Try
                For i = 0 To arrayTextBox.Length - 1
                    If dvform.Table.Columns.Contains(DirectCast(arrayTextBox(i).Name, String).Substring(3)) Then
                        'Hay que hacer un binding al textbox
                        If arrayTextBox(i).DataBindings.Count = 0 Then
                            AñadirBinding(arrayTextBox(i), dvform, arrayTextBox(i).Name.Substring(3).ToUpper, "Value")
