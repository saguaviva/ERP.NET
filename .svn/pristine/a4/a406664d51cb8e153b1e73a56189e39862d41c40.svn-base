    Private Sub IniciarForm(ByVal sender As System.Object, ByVal e As System.EventArgs) Handles MyBase.Load
        Try
            Cursor = Cursors.WaitCursor
            cmdSelect.Connection = cnn
            daSinBuild.SelectCommand = cmdSelect
            CargarTemporadas()
            PonerHandlersErroresParaGrids()

        Catch ex As Exception
            LOG(ex.ToString) : cargando = false : ccn()
        End Try
        Cursor = Cursors.Default
    End Sub
    Private Sub CargarTemporadas()
        Dim i As Integer
        Try

            cmdSelect.CommandText = "SELECT * FROM TEMPORADAS"
            cmdInsert.CommandText = "INSERT INTO TEMPORADAS (CODI, DESCRI, CENTRO) VALUES (:pCODI, :pDESCRI, :pCENTRO)"
            cmdDelete.CommandText = "DELETE FROM TEMPORDAS WHERE CODI = :piCODI AND :piCENTRO"
            cmdUpdate.CommandText = "UPDATE TEMPORADAS SET CODI = :pCODI, DESCRI = :pDESCRI WHERE CODI = :piCODI AND :piCENTRO"
            cmdInsert.Connection = cnn
            cmdUpdate.Connection = cnn
            cmdDelete.Connection = cnn

            daSinBuild.InsertCommand = cmdInsert
            daSinBuild.DeleteCommand = cmdDelete
            daSinBuild.UpdateCommand = cmdUpdate

            añadirParametro(cmdInsert, "text", "CODI")
            añadirParametro(cmdInsert, "text", "DESCRI")
            añadirParametro(cmdInsert, "varchar", "CENTRO")


            cmdUpdate.Parameters.Add(New MySqlParameter("piCODI", CoreLab.MySql.MySqlType.VarChar, 0, ParameterDirection.Input, True, CType(0, Byte), CType(0, Byte), "CODI", DataRowVersion.Original, Nothing))
            cmdUpdate.Parameters.Add(New MySqlParameter("piCENTRO", CoreLab.MySql.MySqlType.VarChar, 0, ParameterDirection.Input, True, CType(0, Byte), CType(0, Byte), "CENTRO", DataRowVersion.Original, Nothing))

            cmdDelete.Parameters.Add(New MySqlParameter("piCODI", CoreLab.MySql.MySqlType.VarChar, 0, ParameterDirection.Input, True, CType(0, Byte), CType(0, Byte), "CODI", DataRowVersion.Original, Nothing))
            cmdDelete.Parameters.Add(New MySqlParameter("piCENTRO", CoreLab.MySql.MySqlType.VarChar, 0, ParameterDirection.Input, True, CType(0, Byte), CType(0, Byte), "CENTRO", DataRowVersion.Original, Nothing))

            daSinBuild.Fill(ds.Tables(tablaTemporadas))
            dvTemporadas = ds.Tables(tablaTemporadas).DefaultView
            dvTemporadas.Table.Columns("CENTRO").DefaultValue = "C" '!!!!!!! 'nz(centro, empresaPorDefecto)
            dvTemporadas.Sort = "CODI"
            dgTemporadas.SetDataBinding(dvTemporadas, "")

            OcultarColumnasDG(dgTemporadas)
            i = 0
            PPCol2("CODI", dgTemporadas, rm.GetString("CODIGO"), "", True, _
                           100, False, C1.Win.C1TrueDBGrid.PresentationEnum.Normal, False, 100, i, False)
            i = i + 1
            PPCol2("DESCRI", dgTemporadas, rm.GetString("DESCRIPCION"), "", True, _
                           250, False, C1.Win.C1TrueDBGrid.PresentationEnum.Normal, False, 250, i, False)

        Catch ex As Exception
            LOG(ex.ToString) : cargando = False : ccn()
        End Try
    End Sub
    Friend Sub guardarDV(ByVal dv As DataView)
        Dim bm As BindingManagerBase
        Dim drv As DataRowView
        Try
            bm = BindingContext(dv)
            If Not bm.Count = 0 Then
                drv = CType(bm.Current, DataRowView)
                drv.EndEdit()
            End If
        Catch ex As Exception
            LOG(ex.ToString) : cargando = False : ccn()
        End Try
    End Sub
    Private Sub btnAceptar_Click(ByVal sender As System.Object, ByVal e As System.EventArgs) Handles btnAceptar.Click
        guardarDV(dvTemporadas)

        If Not ds.Tables(tablaTemporadas).GetChanges Is Nothing Then

            ACN()
            daSinBuild.Update(ds.Tables(tablaTemporadas))
            ccn()
            ds.Tables(tablaTemporadas).AcceptChanges()
        End If

        Me.Close()
    End Sub

