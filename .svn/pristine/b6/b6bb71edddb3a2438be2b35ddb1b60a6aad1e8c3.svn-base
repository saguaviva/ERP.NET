    Public Sub New(ByVal tabla As DataTable, _
                ByVal centro As String, ByRef bindingcontext As BindingContext, ByVal hil As clsHilo)

        MyBase.New(tabla, centro, bindingcontext, "ESDETALLE")
        Dim sqlSel As String
        Try
            hilo = hil
            sqlSinWhere = " SELECT filcol.*, " & _
                            " filiales.DESCRI AS NOMCENTRO " & _
                            " FROM filcol " & _
                            " LEFT JOIN filiales ON (filiales.CODI = filcol.CENTRO) "
            sqlSel = sqlSinWhere & _
                        " WHERE filcol.TIPUS = ""F"" AND " & _
                        " filcol.FIL = """ & hilo.CODI & """ AND " & _
                        " filcol.PROVE = """ & hilo.PROVE & """ AND " & _
                        " filcol.CENTRO = """ & hilo.centro & """ ORDER BY filcol.color"

            cmdSel.CommandText = sqlSel
            'dvForm.Sort = "COLOR"
            da.SelectCommand = cmdSel
            da.Fill(tabla)
            PonerDefaults()

        Catch ex As Exception
            LOG(ex.ToString) : cargando = False : CCN()
        End Try
    End Sub

    Private Sub PonerDefaults()
        Try
            With dvForm.Table
                .Columns("TIPUS").DefaultValue = "F"
                .Columns("MEDIDA").DefaultValue = ""
                .Columns("FIL").DefaultValue = hilo.CODI
                .Columns(tablaProveedores).DefaultValue = hilo.PROVE
                .Columns("COLOR").DefaultValue = ""
                .Columns("ACTUAL").DefaultValue = 0
                .Columns("MINIM").DefaultValue = 0
                .Columns("PREU").DefaultValue = 0
                .Columns("TINTAR").DefaultValue = 0
                .Columns("METRES").DefaultValue = 0
                .Columns("KG").DefaultValue = 0
                .Columns("OBSERV").DefaultValue = ""
                .Columns("CENTRO").DefaultValue = hilo.centro
            End With

        Catch ex As Exception
            LOG(ex.ToString) : cargando = False : CCN()
        End Try
    End Sub

    Friend Sub CambioDetalle(ByVal centro As String, ByVal hil As clsHilo)
        Dim sqlSel As String
        Try
            hilo = hil
            Me.centro = centro
            sqlSel = sqlSinWhere & _
                       " WHERE filcol.TIPUS = ""F"" AND " & _
                       " filcol.FIL = """ & hilo.CODI & """ AND " & _
                       " filcol.PROVE = """ & hilo.PROVE & """ AND " & _
                       " filcol.CENTRO = """ & hilo.centro & """ ORDER BY filcol.color"

            cmdSel.CommandText = sqlSel
            da.SelectCommand = cmdSel
            'dvForm.Sort = "COLOR"
            tabla.Clear()
            da.Fill(tabla)
            PonerDefaults()

        Catch ex As Exception
            LOG(ex.ToString) : cargando = False : CCN()
        End Try
    End Sub
    Public Sub ActualizarDetalle()
        Dim i As Integer
        Dim cambio As Boolean = False
        Try
            For i = 0 To dvForm.Count - 1
                If nz(dvForm(i).Item("FIL"), "") <> hilo.CODI Then dvForm(i).Item("FIL") = nz(hilo.CODI, "") : cambio = True
                If nzn(dvForm(i).Item("PROVE"), 0) <> hilo.PROVE Then dvForm(i).Item("PROVE") = nzn(hilo.PROVE, 0) : cambio = True
                If nz(dvForm(i).Item("CENTRO"), "") <> hilo.centro Then dvForm(i).Item("CENTRO") = nz(hilo.centro, "") : cambio = True
            Next
            If cambio Then guardarDV()

        Catch ex As Exception
            LOG(ex.ToString)
        End Try
    End Sub
    Public Overrides Sub ActualizarOrigen(Optional ByVal nocerrar As Boolean = False, Optional ByVal hackDetalle As Boolean = False)
        Try
            ActualizarDetalle()
            MyBase.ActualizarOrigen(True, True)

        Catch ex As Exception
            LOG(ex.ToString)
        End Try
    End Sub

