    Friend Overrides Sub HacerArraysCampoNombre()
        Try
            With ArrayCampos

                Dim aCodigo(3) As String
                aCodigo(0) = "CODI"
                aCodigo(1) = "Codi"
                aCodigo(2) = "string"
                .Add("CODI", aCodigo)

                Dim aDescri(3) As String
                aDescri(0) = "DESCRI"
                aDescri(1) = rm.GetString("DESCRIPCION")
                aDescri(2) = "string"
                .Add("DESCRI", aDescri)

                Dim aPreu(3) As String
                aPreu(0) = "PREU"
                aPreu(1) = "Preu"
                aPreu(2) = "double"
                .Add("PREU", aPreu)

                Dim aCost(3) As String
                aCost(0) = "COST"
                aCost(1) = "Cost"
                aCost(2) = "double"
                .Add("COST", aCost)

                Dim aNomProve(3) As String
                aNomProve(0) = "NOMPROVE"
                aNomProve(1) = "Nom Proveïdor"
                aNomProve(2) = "string"
                .Add("NOMPROVE", aNomProve)

            End With

        Catch ex As Exception
            LOG(ex.ToString) : cargando = False : CCN()
        End Try
    End Sub
    Friend Overrides Sub CrearComandos()
        Try
            If prove = -1 Then
                cmdSelect.CommandText = "SELECT fil.CODI, fil.PROVE, " & _
                        " prove.NOM AS NOMPROVE,  fil.DESCRI,  " & _
                        " fil.COST " & _
                        " FROM fil  " & _
                        " LEFT JOIN prove ON fil.PROVE = prove.CODI WHERE fil.CENTRO = """ & centro & """  "
                '" GROUP BY fil.CODI, prove.NOM ORDER BY fil.CODI"
                'Quiere decir que solo queremos los hilos de un proveedor determinado
            Else
                cmdSelect.CommandText = "SELECT fil.CODI, fil.PROVE, " & _
                        " prove.NOM AS NOMPROVE,  fil.DESCRI,  " & _
                        " fil.COST " & _
                        " FROM fil  " & _
                        " LEFT JOIN prove ON fil.PROVE = prove.CODI WHERE fil.CENTRO = """ & centro & """ AND FIL.PROVE = " & prove & " " ' & _
                '" GROUP BY fil.CODI, prove.NOM ORDER BY fil.CODI"'
            End If

        Catch ex As Exception
            LOG(ex.ToString) : cargando = False : CCN()
        End Try

    End Sub
